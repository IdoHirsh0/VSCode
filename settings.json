{
    /********** General **********/
    "files.associations": {
        "*.do": "go",
        ".clang-format": "makefile"
    },

    // remove warning on untrusted authors
    "security.workspace.trust.untrustedfiles": "open", 

    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.startupEditor": "none",
    "bracket-pair-colorizer-2.depreciation-notice": false,
    /*****************************/

    /********** Explorer **********/
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": false,
    /******************************/

    /********** Looks **********/
    // Font
    "editor.fontFamily": "Cascadia Code, Fira Code, Jetbrains Mono",
    "editor.fontSize": 20,
    "editor.fontLigatures": true,

    // Theme
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "[Material Theme Darker]": {
            "statusBar.debuggingBackground": "#212121"
        },
    },

    // Terminal
    "terminal.integrated.fontSize": 14,

    // Format
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    /*********************************/

    /********** C **********/
    // Run C code in terminal
    "code-runner.runInTerminal": true, 

    "C_Cpp.default.compilerPath": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-win32-seh-rt_v6-rev0\\mingw64\\bin\\gcc.exe",
    "C_Cpp.updateChannel": "Insiders",

    // VC format
    "C_Cpp.formatting": "vcFormat",
    "C_Cpp.vcFormat.space.preserveInInitializerList": false,
    "C_Cpp.vcFormat.space.insertAfterSemicolon": true,
    "C_Cpp.vcFormat.space.beforeInitializerListOpenBrace": true,
    "C_Cpp.vcFormat.space.afterCastCloseParenthesis": true,
    "C_Cpp.vcFormat.newLine.scopeBracesOnSeparateLines": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,
    /***********************/

    /********** Java **********/
    "java.codeGeneration.generateComments": true,
    "[java]": {
        "editor.defaultFormatter": "redhat.java"
    },
    /**************************/

    /********** Vim **********/
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.smartRelativeLine": true,

    "vim.handleKeys": {
      "<C-a>": false,
      "<C-d>": false,
      "<C-j>": false,
      "<C-f>": false
    },

    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "w"],
            "after": [":", "w", "<Cr>"]
        },
        {
            "before": ["<leader>", "q"],
            "after": [":", "q", "<Cr>"]
        },
        {
            "before": ["<leader>", "s", "j"],
            "after": ["<C-w>", "s"]
        },
        {
            "before": ["<leader>", "s", "l"],
            "after": ["<C-w>", "v"]
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "h"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "l"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-w>", "j"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>", "k"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>", "<Esc>", "<Esc>"]
        },         
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>", "<Esc>", "<Esc>"]
        },         
    ],
    "vim.commandLineModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>", "<Esc>", "<Esc>"]
        },         
    ],
    /*************************/

    /********** Git **********/
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    /*************************/

    /********** Live Share **********/
    "liveshare.audio.startCallOnShare": true,
    /********************************/
}
